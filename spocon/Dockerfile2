FROM arm32v7/debian:stretch
# Add repo and its GPG key
RUN apt-get update
RUN apt-get -y install gnupg
RUN apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 7DBE8BF06EA39B78
## This downloads the armhf version for Raspbian Pi
RUN echo 'deb http://ppa.launchpad.net/spocon/spocon/ubuntu bionic main' | tee /etc/apt/sources.list.d/spocon.list
# Install package
RUN apt-get update
RUN apt-get -y install spocon
